  // Custom styles
  link(rel='stylesheet' type='text/css' href='styles.css')
.container
  .login-form
    .d-flex.justify-content-center.h-100
      .card
        .card-header
          h3 Sign In
          //- .d-flex.justify-content-end.social_icon
          //-   span
          //-     i.fab.fa-facebook-square
          //-   span
          //-     i.fab.fa-google-plus-square
          //-   span
          //-     i.fab.fa-twitter-square
        .card-body
          form(action='/api/user/login' method="POST")
            .input-group.form-group
              .input-group-prepend
                span.input-group-text
                  i.fas.fa-user
              input#email.form-control(type='email',name='email',placeholder='email')
            .input-group.form-group
              .input-group-prepend
                span.input-group-text
                  i.fas.fa-key
              input#password.form-control(type='password',name='password',placeholder='password')
            .form-group
              input.btn.float-right.login_btn(type='submit' value='Login')
        .card-footer
          .d-flex.justify-content-center.links
            a(href='/home') Return To Home
          .d-flex.justify-content-center
            a(href='/forgetpassword') Forgot your password?
script(src="/js/login.js")
